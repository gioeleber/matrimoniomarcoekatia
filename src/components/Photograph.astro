---
interface Props {
	src: string;
  rotationDirection: "positive" | "negative" | "none"
}



const { src, rotationDirection } = Astro.props;
---

<div class="relative">
  <img
  class:list={[
    "shadow-lg p-3 pb-12",
    `md:${rotationDirection === "positive"? "" : "-"}rotate-3`
  ]}
  src={src}
  alt=""
  />
</div>